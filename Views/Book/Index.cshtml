@model IEnumerable<Book>
@{
    ViewData["title"] = "home page";
    int quantity = 1;
}

@foreach(Book book in Model)
{
    <div class="border container">
        <div class="row justify-content-between">
            <div class="col-2 card" style="width: 11rem">
                <img src="/img/book.png" class="card-img-top">
            </div>
            <div class="border col-10 m-1 scrollspy-example"  style="overflow-y: scroll; position: relative; height: 150px;" data-bs-spy="scroll" data-bs-offset="0" tabindex="0">
                <strong>@book.Name</strong>
                <hr>
                @book.Description
                lorem ipsum dolor sit amet, consectetur adipisicing elit. perferendis, maiores nemo aperiam commodi mollitia, consequuntur atque accusantium ullam placeat aliquam recusandae minus perspiciatis a, aspernatur saepe temporibus facilis aut rem.
                lorem ipsum dolor sit amet consectetur adipisicing elit. ipsa officia quia architecto tempore tempora nobis, sapiente fugit, exercitationem minus esse natus. doloribus illum commodi doloremque sit odit aut placeat facere.
                lorem ipsum dolor sit amet consectetur, adipisicing elit. eum commodi maxime quisquam laboriosam quos reiciendis, delectus pariatur obcaecati similique incidunt ipsam nostrum placeat, voluptatem voluptatum, ex architecto debitis eveniet explicabo.
                lorem ipsum dolor sit amet consectetur, adipisicing elit. atque et temporibus voluptatibus deleniti recusandae? soluta, beatae vel. quas voluptates quasi modi, dolor ratione sequi voluptas laborum rem tenetur eveniet reiciendis.
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="col-sm-12 my-1">
                <a class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addModal">
                    Add
                </a>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#morecollapse" aria-expanded="false" aria-controls="morecollapse">
                    More
                </button>
            </div>

        </div>
        <div class="row collapse" id="morecollapse">
            <div class="card card-body">
                <div>
                    Name:
                    <strong>@book.Name</strong>
                </div>
                <div>
                    Author
                    <strong>@book.Author</strong>
                </div>
                <div>
                    Price
                    <strong>@book.Price.ToString("c")</strong>
                </div>
                <div>
                    Published
                    <strong>@book.Published</strong>
                </div>
            </div>
        </div>
        <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addModalLabel">Order</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-controller="Cart" asp-action="AddToCart">
                        <div class="modal-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@book.Name</td>
                                        <td>
                                            <input type="hidden" name="id" value="@book.Id">
                                            <input style="width: 100px;" type="number" name="quantity" value="@quantity">
                                        </td>
                                        <td>@book.Price.ToString("c")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
}